@model IEnumerable<Nhom32_QuanLyTiemChung.Models.Tre>

@{
    ViewBag.Title = "Thông tin trẻ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách thông tin trẻ</h2>

<p>
    @Html.ActionLink("Thêm thông tin trẻ", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Mã trẻ</th>
            <th>Mã người giám hộ</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Chiều cao</th>
            <th>Cân nặng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.idTre)</td>
                <td>@Html.DisplayFor(modelItem => item.idNguoiGiamHo)</td>
                <td>@Html.DisplayFor(modelItem => item.hoTen)</td>
                <td>@Html.DisplayFor(modelItem => item.ngaySinh)</td>
                <td>@Html.DisplayFor(modelItem => item.chieuCao)</td>
                <td>@Html.DisplayFor(modelItem => item.canNang)</td>
                <th>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.idTre }, new { @class = "btn btn-sm btn-warning" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.idTre }, new { @class = "btn btn-sm btn-info" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.idTre }, new { @class = "btn btn-sm btn-danger" })
                </th>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        font-family: sans-serif;
    }

    h2 {
        margin: 20px;
        text-align: center;
        font-weight: bold;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table thead {
            background-color: #343a40;
            color: white;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #e9ecef;
        }

    .btn {
        margin-right: 5px;
    }
</style>





