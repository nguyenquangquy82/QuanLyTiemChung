@model IEnumerable<Nhom32_QuanLyTiemChung.Models.ThongTinCanBo>

@{
    ViewBag.Title = "Thông tin cán bộ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Danh sách thông tin cán bộ</h2>

<p>
    @Html.ActionLink("Thêm thông tin cán bộ", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
    <td>Mã cán bộ</td>
    <td>Tên cán bộ</td>
    <td>Số điện thoại</td>
    <td>Email</td>
    <td>Căn cước công dân</td>
    <td>Địa chỉ</td>

    <th>Thao tác </th>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.idCanBo)</td>
                <td>@Html.DisplayFor(modelItem => item.hoTen)</td>
                <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                <td>@Html.DisplayFor(modelItem => item.eMail)</td>
                <td>@Html.DisplayFor(modelItem => item.CCCD)</td>
                <th>@Html.DisplayFor(modelItem => item.diaChi)</th>





                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.idCanBo }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.idCanBo }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.idCanBo }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        font-family: sans-serif;
    }
    h2 {
        margin: 20px;
        text-align: center;
        font-weight: bold;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table thead {
            background-color: #343a40;
            color: white;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #e9ecef;
        }

    .btn {
        margin-right: 5px;
    }
</style>








