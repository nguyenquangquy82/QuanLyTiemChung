@model Nhom32_QuanLyTiemChung.Models.PhieuNhap

@{
    ViewBag.Title = "Thêm phiếu nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><strong>Thêm phiếu nhập</strong></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.idPhieuNhap, "Mã phiếu nhập", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.idPhieuNhap, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.idPhieuNhap, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ngayNhap, "Ngày nhập", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ngayNhap, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ngayNhap, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.tongSoLuongNhap, "Tổng số lượng nhập", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.tongSoLuongNhap, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tongSoLuongNhap, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ghiChu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ghiChu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ghiChu, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.idCanBo, "Mã cán bộ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("idCanBo", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idCanBo, "", new { @class = "text-danger" })
        </div>
    
</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-secondary" })

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    /* CSS for Form */
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    /* Adjust spacing and alignment */
    .form-horizontal {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: bold;
    }

    /* Style input fields */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    /* Style submit button */
    .btn-default {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-default:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    /* Style heading */
    h2 {
        margin: 20px auto;
        font-size: 30px;
        color: #007bff; /* Màu xanh dương */
        text-align: center;
    }

    /* Style link for navigation */
    #content a {
        text-decoration: none;
        color: white;
    }

        /* Style link for navigation on hover */
        #content a:hover {
            text-decoration: underline;
            color: #0056b3;
        }
</style>
