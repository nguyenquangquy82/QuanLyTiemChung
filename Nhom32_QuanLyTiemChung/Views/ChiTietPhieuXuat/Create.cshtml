@model Nhom32_QuanLyTiemChung.Models.ChiTietPhieuXuat

@{
    ViewBag.Title = "Thêm Chi tiết phiếu xuất";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <h2><strong>Thêm Chi tiết phiếu xuất</strong></h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.idPhieuXuat, "Mã phiếu xuất", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idPhieuXuat", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idPhieuXuat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idVaccine, "Mã vaccine", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idVaccine", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idVaccine, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.soLuongXuat,"Số lượng xuất", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.soLuongXuat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.soLuongXuat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    /* CSS for Form */
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    /* Adjust spacing and alignment */
    .form-horizontal {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: bold;
    }

    /* Style input fields */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    /* Style submit button */
    .btn-default {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-default:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    /* Style heading */
    h2 {
        margin: 20px auto;
        font-size: 30px;
        color: #007bff; /* Màu xanh dương */
        text-align: center;
    }

    /* Style link for navigation */
    #content a {
        text-decoration: none;
        color: white;
    }

        /* Style link for navigation on hover */
        #content a:hover {
            text-decoration: underline;
            color: #0056b3;
        }
</style>