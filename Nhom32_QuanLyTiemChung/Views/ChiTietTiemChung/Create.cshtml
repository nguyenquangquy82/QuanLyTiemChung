@model Nhom32_QuanLyTiemChung.Models.ChiTietTiemChung

@{
    ViewBag.Title = "Thêm chi tiết tiêm chủng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><strong>Thêm chi tiết tiêm chủng</strong></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.idMuiTiem, "Mã mũi tiêm", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.idMuiTiem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.idMuiTiem, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.idTre, "Mã trẻ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("idTre", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idTre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.idVaccine, "Mã vaccine", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("idVaccine", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idVaccine, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ngayTiem, "Ngày tiêm", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ngayTiem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ngayTiem, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.tinhTrang, "Tình trạng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.tinhTrang, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tinhTrang, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.thuTuMuiTiem, "Thứ tự mũi tiêm", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.thuTuMuiTiem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.thuTuMuiTiem, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.idCanBo, "Mã cán bộ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("idCanBo", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idCanBo, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    /* CSS for Form */
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    /* Adjust spacing and alignment */
    .form-horizontal {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: bold;
    }

    /* Style input fields */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    /* Style submit button */
    .btn-default {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-default:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    /* Style heading */
    h2 {
        margin: 20px auto;
        font-size: 30px;
        color: #007bff; /* Màu xanh dương */
        text-align: center;
    }

    /* Style link for navigation */
    #content a {
        text-decoration: none;
        color: white;
    }

        /* Style link for navigation on hover */
        #content a:hover {
            text-decoration: underline;
            color: #0056b3;
        }
</style>
