    h2 {
        margin: 20px auto;
        font-size: 30px;
        color: #007bff; /* Màu xanh dương */
        text-align: center;
    }

    /* Style link for navigation */
    #content a {
        text-decoration: none;
        color: white;
    }

        /* Style link for navigation on hover */
        #content a:hover {
            text-decoration: underline;
            color: #0056b3;
        }
</style>