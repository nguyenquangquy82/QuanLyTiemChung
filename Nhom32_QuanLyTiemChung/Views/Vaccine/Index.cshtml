@model IEnumerable<Nhom32_QuanLyTiemChung.Models.Vaccine>

@{
    ViewBag.Title = "Vaccine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết Vaccine</h2>

<p>
    @Html.ActionLink("Thêm vaccine", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Mã Vaccine</th>
            <th>Tên vaccine</th>
            <th>Nước sản xuất</th>
            <th>Nhà sản xuất</th>
            <th>Mô tả bệnh</th>
            <th>Kỳ tiêm</th>
            <th>Số lượng mũi tiêm</th>
            <th>Số lượng còn lại</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>@Html.DisplayFor(modelItem => item.idVaccine)</th>
            <th>@Html.DisplayFor(modelItem => item.tenVaccine)</th>
            <th>@Html.DisplayFor(modelItem => item.nuocSanXuat)</th>
            <th>@Html.DisplayFor(modelItem => item.nhaSanXuat)</th>
            <th>@Html.DisplayFor(modelItem => item.moTaBenh)</th>
            <th>@Html.DisplayFor(modelItem => item.kyTiem)</th>
            <th>@Html.DisplayFor(modelItem => item.soLuongMuiTiem)</th>
            <th>@Html.DisplayFor(modelItem => item.soLuongConLai)</th>
            <th>
                @Html.ActionLink("Sửa", "Edit", new { id = item.idVaccine }, new { @class = "btn btn-sm btn-warning" })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.idVaccine }, new { @class = "btn btn-sm btn-info" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.idVaccine }, new { @class = "btn btn-sm btn-danger" })
            </th>
        </tr>
        }
    </tbody>
</table>

<style>
    body {
        font-family: sans-serif;
    }

    h2 {
        margin: 20px;
        text-align: center;
        font-weight: bold;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table thead {
            background-color: #343a40;
            color: white;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #e9ecef;
        }

    .btn {
        margin-right: 5px;
    }
</style>
