<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
    <title>@ViewBag.title</title>
    <!-- Bootstrap CSS -->
    <!----css3---->

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/custom.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <!--google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <!--google material icon-->
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">


    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrapper">
        <div class="body-overlay"></div>
        <!-------sidebar--design------------>
        <div id="sidebar">
            <div class="sidebar-header">
                <h3>
                    
                    <div style="display: flex; align-items: center;">
                        <img src="~/Content/img/logo.png" class="img-fluid" />
                        <span style="font-size: 13px; white-space: nowrap;">TIÊM CHỦNG TP ĐÀ NẴNG</span>
                    </div>

                </h3>
            </div>
            <ul class="list-unstyled component m-0">
                <li class="dropdown">
                    <a href="@Url.Action("Index", "Home")" class="dashboard"><i class="material-icons">dashboard</i>Trang chủ </a>
                </li>
                <li class="dropdown">
                    <a href="#homeSubmenu1" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="material-icons">update</i>Cập nhật hồ sơ
                    </a>

                    <ul class="collapse list-unstyled menu" id="homeSubmenu1">
                        <li><a href="@Url.Action("Index", "Tre")">Thông tin trẻ</a></li>
                        <li><a href="@Url.Action("Index", "ThongTinCanBo")">Thông tin cán bộ</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href=@Url.Action("Index", "ChiTietTiemChung") class="vaccination-details"><i class="material-icons">info</i>Chi tiết tiêm chủng</a>
                </li>


                <li class="dropdown">
                    <a href="#homeSubmenu2" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="material-icons">inventory</i>Kho vật tư, Kho Vaccine
                    </a>
                    <ul class="collapse list-unstyled menu" id="homeSubmenu2">
                        <li><a href=@Url.Action("Index", "PhieuNhaps")>Phiếu nhập</a></li>
                        <li><a href=@Url.Action("Index", "ChiTietPhieuNhap")>Chi tiết phiếu nhập</a></li>
                        <li><a href=@Url.Action("Index", "PhieuXuat")>Phiếu xuất</a></li>
                        <li><a href=@Url.Action("Index", "ChiTietPhieuXuat")>Chi tiết phiếu xuất</a></li>
                        <li><a href=@Url.Action("Index", "Vaccine")>Kho Vaccine</a></li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a href="@Url.Action("Index", "Chart")" class="statistics"><i class="material-icons">insert_chart</i>Thống kê</a>
                </li>


            </ul>
        </div>
        <!-------sidebar--design- close----------->
        <!-------page-content start----------->
        <div id="content">
            <!------top-navbar-start----------->
            <div class="top-navbar">
                <div class="xd-topbar">
                    <div class="row">
                        <div class="col-2 col-md-1 col-lg-1 order-2 order-md-1 align-self-center">
                            <div class="xp-menubar">
                                <span class="material-icons text-white">signal_cellular_alt</span>
                            </div>
                        </div>
                        <div class="col-md-5 col-lg-3 order-3 order-md-2">
                            <div class="xp-searchbar">
                                <form>
                                    <div class="input-group">
                                        <input type="search" class="form-control" placeholder="Tìm kiếm">
                                        <div class="input-group-append">
                                            <button class="btn" type="submit" id="button-addon2">
                                                Tìm
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-10 col-md-6 col-lg-8 order-1 order-md-3">
                            <div class="xp-profilebar text-right">
                                <nav class="navbar p-0">
                                    <ul class="nav navbar-nav flex-row ml-auto">
                                        <li class="dropdown nav-item active">
                                            <a class="nav-link" href="#" data-toggle="dropdown">
                                                <span class="material-icons">notifications</span>
                                                <span class="notification">4</span>
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li><a href="#">Thông báo tiêm chủng</a></li>
                                                <li><a href="#">Bạn có 3 tin nhắn nhắc nhở</a></li>
                                                <li><a href="#">Kiểm tra lịch tiêm chủng</a></li>
                                                <li><a href="#">Lịch tiêm chủng tuần tới</a></li>
                                            </ul>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">
                                                <span class="material-icons">question_answer</span>
                                            </a>
                                        </li>

                                        
                                        <li class="dropdown nav-item">
                                            <a class="nav-link" href="#" data-toggle="dropdown">
                                                <img src="/Content/img/user.jpg" style="width:40px; border-radius:50%;" />
                                                <span class="xp-user-live"></span>
                                            </a>
                                            <ul class="dropdown-menu small-menu">
                                                <li>
                                                    <a href="#">
                                                        <span class="material-icons">person_outline</span>
                                                        Hồ sơ
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#">
                                                        <span class="material-icons">settings</span>
                                                        Cài đặt
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("Login", "Account")">
                                                        <span class="material-icons">logout</span>
                                                        Đăng xuất
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @RenderBody()
           
        </div>
    </div>
    <!-------complete html----------->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="Content/js/jquery-3.3.1.min.js"></script>
    <script src="Content/js/popper.min.js"></script>
    <script src="Content/js/bootstrap.min.js"></script>

    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".xp-menubar").on('click', function () {
                $("#sidebar").toggleClass('active');
                $("#content").toggleClass('active');
            });
            $('.xp-menubar,.body-overlay').on('click', function () {
                $("#sidebar,.body-overlay").toggleClass('show-nav');
            });
        });
    </script>
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
