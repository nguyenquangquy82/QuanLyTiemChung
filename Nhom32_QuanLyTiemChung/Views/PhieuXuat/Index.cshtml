@model IEnumerable<Nhom32_QuanLyTiemChung.Models.PhieuXuat>

@{
    ViewBag.Title = "Phiếu xuất";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BẢNG PHIẾU XUẤT</h2>

<p>
    @Html.ActionLink("Thêm phiếu xuất", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Mã phiếu xuất</th>
            <th>Ngày xuất</th>
            <th>Tổng số lượng xuất</th>
            <th>Ghi chú</th>
            <th>Mã cán bộ</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@Html.DisplayFor(modelItem => item.idPhieuXuat)</th>
                <th>@Html.DisplayFor(modelItem => item.ngayXuat)</th>
                <th>@Html.DisplayFor(modelItem => item.tongSoLuongXuat)</th>
                <th>@Html.DisplayFor(modelItem => item.ghiChu)</th>
                <th>@Html.DisplayFor(modelItem => item.ThongTinCanBo.idCanBo)</th>
                <th>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.idPhieuXuat }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.idPhieuXuat }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.idPhieuXuat }, new { @class = "btn btn-danger btn-sm" })
                </th>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        font-family: sans-serif;
    }

    h2 {
        margin: 20px;
        text-align: center;
        font-weight: bold;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table thead {
            background-color: #343a40;
            color: white;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #e9ecef;
        }

    .btn {
        margin-right: 5px;
    }
</style>